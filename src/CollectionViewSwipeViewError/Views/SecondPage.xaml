<?xml version="1.0" encoding="utf-8"?>
<views:BasePage x:TypeArguments="vm:MainPageViewModel"
                x:DataType="vm:MainPageViewModel"
                xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:vm="clr-namespace:CollectionViewSwipeViewError.ViewModels"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:views="clr-namespace:CollectionViewSwipeViewError.Views"
                x:Class="CollectionViewSwipeViewError.Views.SecondPage">
    <Grid>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label FontSize="32" Text="Welcome to page Two - Close For Error..." />

            <Button
                Text="Close"
                SemanticProperties.Hint="Navigates Back"
                Command="{Binding ClosePageCommand}"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </Grid>
</views:BasePage>